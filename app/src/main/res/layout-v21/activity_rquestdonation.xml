<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8603DAC5"
    android:padding="30dp"
    tools:context=".Rquestdonation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="0dp"

        >
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/back_icon"
           />

        <TextView
            android:id="@+id/title"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/aclonica"
            android:paddingTop="0dp"
            android:text="@string/donation_request_form"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/linearback"
            android:orientation="vertical"
            android:padding="20dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">


            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextback"
                        android:drawableStart="@drawable/usicon"
                        android:hint="@string/first_name"
                        android:inputType="textPersonName"
                        android:textColorHint="#4A494C" />
                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextback"
                        android:drawableStart="@drawable/usicon"
                        android:hint="@string/last_name"
                        android:inputType="textPersonName"
                        android:textColorHint="#4A494C" />

                    <EditText
                        android:id="@+id/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittextback"
                        android:drawableStart="@drawable/phone"
                        android:hint="@string/phone_number"
                        android:inputType="textPersonName"
                        android:textColorHint="#4A494C" />

                    <EditText
                        android:id="@+id/emailaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittextback"
                        android:drawableStart="@drawable/emicon"
                        android:hint="@string/email_address"
                        android:inputType="textEmailAddress"
                        android:textColorHint="#4A494C" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextback"
                        android:drawableStart="@drawable/address"
                        android:hint="@string/address"
                        android:textColorHint="#4A494C"
                        app:passwordToggleEnabled="true" />


                    <EditText
                        android:id="@+id/members"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittextback"
                        android:drawableStart="@drawable/people"
                        android:hint="@string/members_in_a_family"
                        android:textColorHint="#4A494C"
                        app:passwordToggleEnabled="true" />

                    <TextView
                        android:id="@+id/don"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_of_donation_required"
                        android:textColor="#0F0101"
                        android:textSize="18sp" />


                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/foods" />


                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/clothes" />

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="0dp"
                        android:text="@string/medical_help" />


                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="0dp"
                        android:text="@string/grocery" />


                    <CheckBox
                        android:id="@+id/checkBox5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="0dp"
                        android:text="@string/others" />
                    <EditText
                        android:id="@+id/other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="@string/if_others_please_specify"
                        android:textColorHint="#4A494C"
                        app:passwordToggleEnabled="true" />

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="#000"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center"
                        android:text="@string/submit"
                        android:textColor="#fff"
                        android:transitionName="transition_next_button"/>



                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

